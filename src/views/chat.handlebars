<div class="container mt-5">
    <div class="mb-3 p-4 bg-primary bg-gradient text-dark bg-opacity-25 rounded-5">
        <h1 class="display-4">Bienvenido {{user.first_name}} {{user.last_name}}</h1>
        <p><strong>Email:</strong> {{user.email}}</p>
        {{#if user.age}}
            <p><strong>Edad:</strong> {{user.age}}</p>
        {{/if}}
        <p><strong>Rol:</strong> {{user.role}}</p>
        <a href="/api/sessions/logout"><button class="btn btn-danger">Logout</button></a>
    </div>
    <h2 class="display-5">Chat comunitario</h2>
    <a href="/products" class="btn btn-primary my-3">Ir al listado de productos</a>
    <div id="messageLogs" class="mb-3 p-4 bg-primary bg-gradient text-dark bg-opacity-25 rounded-5"></div>
    <input type="text" id="chatBox" class="mb-3 p-2 bg-primary bg-gradient text-dark bg-opacity-25 rounded-5 border-0 col-12">
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/getUser.js"></script>
<script src="js/updateLastActivity.js"></script>
<script src="/js/chat.js"></script>