<div class="container mt-5">
    <div class="mb-3 p-4 bg-primary bg-gradient text-dark bg-opacity-25 rounded-5">
        <h1 class="display-4">Bienvenido {{user.name}}</h1>
        <p><strong>Email:</strong> {{user.email}}</p>
        {{#if user.age}}
            <p><strong>Edad:</strong> {{user.age}}</p>
        {{/if}}
        <p><strong>Rol:</strong> {{user.role}}</p>
        <a href="/api/sessions/logout"><button class="btn btn-danger">Logout</button></a>
    </div>
    <h2 class="display-5">Historial de compras</h2>
    <a href="/products
" class="btn btn-primary my-3">Ir al listado de productos</a>
    <div class="row row-cols-2 text-center g-2" id="card-group">
        {{#each tickets}}
            <div>
                <div class="card">
                    <div class="card-body d-flex flex-column justify-content-between" style="position: relative; width:100%;">
                        <h4 class="card-title">CÃ³digo de ticket: {{this.code}}</h4>
                        <p class="card-text fw-bold">Fecha y hora: {{this.purchase_datetime}}</p>
                        <h5 class="card-title">Items</h5>
                        <ul class="list-unstyled">
                            {{#each this.items}}
                                <li class="list-group-item">{{this.title}} x {{this.quantity}}</li>
                            {{/each}}
                        </ul>
                        <p class="card-text fw-bold">Monto: ${{this.amount}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>