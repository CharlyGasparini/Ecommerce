<div class="container my-5">
    <h1>Productos en stock</h1>
    <h2 class="my-3">Listado</h2>
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Stock</th>
                <th>Code</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                {{#if this.status}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>${{this.price}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.stock}}</td>
                        <td>{{this.code}}</td>
                    </tr>
                {{/if}}
            {{/each}}
        </tbody>
    </table>
</div>