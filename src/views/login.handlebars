<div class="container d-flex justify-content-center align-items-center" style="height: 100vh">
    <form id="form-login" class="w-25 p-4 bg-primary bg-gradient text-dark bg-opacity-25 rounded-5">
        <h1 class="display-6 text-center">Login</h1>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="Ingrese su email" autocomplete="email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Contraseña</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Ingrese su contraseña" autocomplete="current-password">
        </div>
        <div class="mb-3 d-flex justify-content-between align-item-center">
            <button type="submit" class="btn btn-primary">Ingresar</button>
            <a href="/register" class="my-auto" style="text-decoration: none;">Registrarse</a>
        </div>
    </form>
</div>

<script src="/js/login.js"></script>