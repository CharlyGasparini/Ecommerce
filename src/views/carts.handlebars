<div class="container mt-5">
    <div class="mb-3 p-4 bg-primary bg-gradient text-dark bg-opacity-25 rounded-5">
        <h1 class="display-4">Bienvenido {{user.name}}</h1>
        <p><strong>Email:</strong> {{user.email}}</p>
        {{#if user.age}}
            <p><strong>Edad:</strong> {{user.age}}</p>
        {{/if}}
        <p><strong>Rol:</strong> {{user.role}}</p>
        <a href="/api/sessions/logout"><button class="btn btn-danger">Logout</button></a>
    </div>
    <h2 class="display-5">Carrito ID: {{cid}}</h2>
    <a href="/products
" class="btn btn-primary my-3">Ir al listado de productos</a>
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Unit price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                {{#if isFull}}
                    <th>
                        <button id="empty-btn" class="btn btn-danger">Vaciar carrito</button>
                    </th>
                {{/if}}
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                {{#if this.status}}
                    <tr class="product-row">
                        <td>{{this._id}}</td>
                        <td>{{this.title}}</td>
                        <td>${{this.price}}</td>
                        <td>x{{this.quantity}}</td>
                        <td>${{this.subtotal}}</td>
                        <td>
                            <button class="btn btn-danger del-btn">
                                <i class="fa-sharp fa-solid fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {{/if}}
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td class="h3">Total</td>
                <td></td>
                <td></td>
                <td></td>
                <td class="h3">${{total}}</td>
            </tr>
        </tfoot>
    </table>
    {{#if isFull}}
        <button id="purchase-btn" class="btn btn-success">Iniciar compra</button>
    {{/if}}
</div>

<script src="/js/getUser.js"></script>
<script src="js/updateLastActivity.js"></script>
<script src="/js/carts.js"></script>