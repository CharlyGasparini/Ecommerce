<div class="container mt-5">
    <h1 class="display-4">Carrito ID: {{cid}}</h1>
    <a href="/products
" class="btn btn-primary my-3">Ir al listado de productos</a>
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Unit price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                {{#if isFull}}
                    <th>
                        <button id="empty-btn" class="btn btn-danger">Vaciar carrito</button>
                    </th>
                {{/if}}
            </tr>
            </thead>
        <tbody>
            {{#each products}}
                {{#if this.status}}
                    <tr class="product-row">
                        <td>{{this._id}}</td>
                        <td>{{this.title}}</td>
                        <td>${{this.price}}</td>
                        <td>x{{this.quantity}}</td>
                        <td>${{this.subtotal}}</td>
                        <td>
                            <button class="btn btn-danger del-btn">
                                <i class="fa-sharp fa-solid fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {{/if}}
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td class="h3">Total</td>
                <td></td>
                <td></td>
                <td></td>
                <td class="h3">${{total}}</td>
            </tr>
        </tfoot>
    </table>
</div>

<script src="/js/carts.js"></script>